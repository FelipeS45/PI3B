<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/green"
        android:layout_marginTop="0dp"
        />

    <EditText
        android:id="@+id/editTextLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BEFF"
        android:textSize="26dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:inputType="textPersonLogo"
        android:background="@null"
        android:layout_marginTop="30dp"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Faça seu Login"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="textPersonLogin"
        android:background="@null"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/editTextEmailMatricula"
        android:layout_width="380dp"
        android:layout_height="35dp"
        android:hint="E-mail/Matrícula"
        android:inputType="textPersonEmailMatricula"
        android:background="@drawable/border"
        android:paddingStart="18dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        />

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="380dp"
        android:layout_height="35dp"
        android:hint="Senha"
        android:inputType="textPersonSenha"
        android:background="@drawable/border"
        android:paddingStart="18dp"
        android:layout_marginTop="280dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        />

    <EditText
        android:id="@+id/editTextManterConectado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quero permanecer conectado(a)"
        android:inputType="textPersonAceitarTermos"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@null"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="340dp"
        />

    <Button
        android:id="@+id/myButton2"
        android:layout_marginStart="80dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/button"
        android:layout_height="16dp"
        android:layout_width="16dp"
        />

    <Button
        android:id="@+id/myButton5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:text="Conectar"
        android:background="@drawable/border2"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>